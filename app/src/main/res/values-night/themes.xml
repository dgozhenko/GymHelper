<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymHelper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>
    </style>

    <style name="Theme.GymHelper.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="font">@font/ubuntu_light</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="Theme.GymHelper.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/button_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="font">@font/ubuntu_light</item>
    </style>

</resources>